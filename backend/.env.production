# Production environment variables for backend
NODE_ENV=production
PORT=5002

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@prod-db-host:5432/influencer_production
DIRECT_URL=postgresql://user:password@prod-db-host:5432/influencer_production

# Frontend URL (for CORS)
FRONTEND_URL=https://influencer-marketing.jp
ALLOWED_ORIGINS=https://influencer-marketing.jp,https://www.influencer-marketing.jp

# JWT
JWT_SECRET=your_production_jwt_secret_key_here_change_this
JWT_EXPIRATION=7d

# API Keys - Replace with actual production keys
RAPIDAPI_TIKTOK_KEY=your_production_tiktok_api_key
RAPIDAPI_TIKTOK_HOST=tiktok-video-no-watermark2.p.rapidapi.com

# Cloudinary (for image storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Socket.io
SOCKET_IO_PATH=/socket.io

# Sentry (error tracking)
SENTRY_DSN=your_sentry_dsn_url

# Security
CORS_ORIGIN=https://influencer-marketing.jp
SECURE_COOKIES=true
HTTPS_ONLY=true
CSP_ENABLED=true

# Session
SESSION_SECRET=your_production_session_secret
SESSION_MAX_AGE=86400000

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
