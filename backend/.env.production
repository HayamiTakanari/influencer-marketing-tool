# ============================================
# Session Configuration
# ============================================
SESSION_SECRET=your_production_session_secret
SESSION_MAX_AGE=86400000

# ============================================
# Rate Limiting Configuration
# ============================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
